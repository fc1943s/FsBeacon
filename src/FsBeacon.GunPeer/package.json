{
  "name": "fsbeacon-gun-peer",
  "version": "0.0.1",
  "description": "",
  "main": "server.js",
  "author": "fc1943s",
  "private": true,
  "scripts": {
    "ssl": "([ -d ssl ] || mkdir ssl) && mkcert -install && mkcert --cert-file=./ssl/%FSBEACON_DOMAIN%.pem --key-file=./ssl/%FSBEACON_DOMAIN%-key.pem %FSBEACON_DOMAIN%",
    "start": "cross-env-shell \"yarn install && yarn ssl && node server.js\"",
    "start-ci": "cross-env-shell HTTPS=true \"yarn start\"",
    "start-prod": "cross-env-shell HTTPS=true FSBEACON_DOMAIN=$FSBEACON_GUN_PEER_CONTAINER_ID_1.eastus.azurecontainer.io \"yarn start\"",
    "start-dev": "cross-env-shell HTTPS=true FSBEACON_DOMAIN=localhost ROOT_PATH=$ROOT_PATH \"yarn start\"",
    "start-dev-local": "cross-env-shell ROOT_PATH=./radata \"yarn start-dev\""
  },
  "dependencies": {
    "gun": "amark/gun.git#master"
  },
  "devDependencies": {
    "cross-env": "~7.0",
    "mkcert-prebuilt": "~1.0"
  }
}
